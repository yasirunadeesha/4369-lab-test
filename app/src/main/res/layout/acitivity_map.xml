<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_map">

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView3"
        android:layout_width="400dp"
        android:layout_height="474dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06" />

    <EditText
        android:id="@+id/addinput"
        android:layout_width="353dp"
        android:layout_height="49dp"
        android:layout_marginBottom="164dp"
        android:hint="enter  location"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapView3"
        app:layout_constraintVertical_bias="0.678"
        app:layout_constraintWidth_percent="0.8" />

    <Button
        android:id="@+id/searchlaocation"
        android:layout_width="323dp"
        android:layout_height="65dp"
        android:layout_marginTop="28dp"
        android:text="show location"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addinput"
        app:layout_constraintVertical_bias="0.0"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/temp"
        android:layout_width="171dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:text="Temperature"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchlaocation" />

</androidx.constraintlayout.widget.ConstraintLayout>